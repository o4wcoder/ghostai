uniform float2 iResolution;
uniform float iTime;

half4 main(float2 p) {
    float2 uv = p / iResolution;
    float2 center = float2(0.5, 0.5);
    float dist = distance(uv, center);

    float t = mod(iTime, 6.2831);
    float pulse = 0.2 + 0.1 * sin(t); // smoother breathing
    float body = smoothstep(pulse + 0.15, pulse - 0.15, dist);

    return half4(0.4, 1.0, 0.4, body);
}
